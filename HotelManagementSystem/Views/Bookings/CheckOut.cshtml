@model HotelManagementSystem.Models.Booking
@using HotelManagementSystem.Models
@using HotelManagementSystem.Extensions

@{
    ViewData["Title"] = "تأكيد تسجيل المغادرة";
}

<h1>تأكيد تسجيل المغادرة</h1>

<h3>هل أنت متأكد أنك تريد تسجيل مغادرة هذا الحجز؟</h3>
<div>
    <h4>الحجز</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckInDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckInDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckOutDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckOutDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
    </dl>

    <form asp-action="CheckOut">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()
        <input type="submit" value="تأكيد تسجيل المغادرة" class="btn btn-primary" /> |
        <a asp-action="Details" asp-route-id="@Model.Id">العودة إلى التفاصيل</a>
    </form>
</div>
