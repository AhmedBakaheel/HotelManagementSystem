@model HotelManagementSystem.Models.Invoice
@using HotelManagementSystem.Models
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>فاتورة رقم @Model.InvoiceNumber</title>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 10pt;
            margin: 20mm;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #333;
        }

        .invoice-header, .invoice-details, .invoice-items, .invoice-summary, .invoice-footer {
            margin-bottom: 15px;
        }

        .invoice-header {
            text-align: center;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            .invoice-header h2 {
                margin: 0;
                font-size: 24pt;
            }

        .invoice-details .row {
            margin-bottom: 5px;
        }

        .invoice-details .col-sm-6 {
            padding-left: 0;
            padding-right: 0;
        }

        .invoice-items table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        .invoice-items th, .invoice-items td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: right;
        }

        .invoice-items th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .invoice-summary {
            margin-top: 20px;
            float: left;
            width: 40%;
        }

            .invoice-summary table {
                width: 100%;
            }

            .invoice-summary td {
                padding: 5px;
                border: none;
                text-align: right;
            }

            .invoice-summary .total-row {
                font-weight: bold;
                border-top: 1px solid #ddd;
                padding-top: 10px;
            }

        .invoice-footer {
            text-align: center;
            margin-top: 50px;
            border-top: 1px solid #ddd;
            padding-top: 10px;
            clear: both;
        }


        @media print { 
            .no-print
            {
            display: none !important;
            }

        body {
            margin: 0;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="invoice-header">
            <h2>فاتورة</h2>
            <p>نظام إدارة الفنادق</p>
        </div>

        <div class="invoice-details row">
            <div class="col-sm-6">
                <p><strong>رقم الفاتورة:</strong> @Model.InvoiceNumber</p>
                <p><strong>تاريخ الفاتورة:</strong> @Model.InvoiceDate.ToShortDateString()</p>
                <p><strong>تاريخ الاستحقاق:</strong> @Model.DueDate.ToShortDateString()</p>
            </div>
            <div class="col-sm-6 text-right">
               
                <p><strong>العميل:</strong> @(Model.Customer?.FullName ?? "غير معروف")</p>
                <p><strong>رقم الحجز:</strong> @(Model.Booking != null ? $"العميل: {Model.Booking.Customer?.FullName ?? "غير معروف"} - الغرفة: {Model.Booking.Room?.RoomNumber ?? "غير معروف"}" : "لا يوجد حجز مرتبط")</p>
                <p><strong>حالة الفاتورة:</strong> @Model.Status.ToString()</p>
            </div>
        </div>

        <div class="invoice-items">
            <h3>بنود الفاتورة</h3>
            @if (Model.InvoiceItems != null && Model.InvoiceItems.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>البند</th>
                            <th>الكمية</th>
                            <th>سعر الوحدة</th>
                            <th>المجموع الفرعي</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InvoiceItems)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Service.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                                <td>@Html.DisplayFor(modelItem => item.Subtotal)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>لا توجد بنود فاتورة لهذا الطلب.</p>
            }
        </div>

        <div class="invoice-summary">
            <table>
                <tr>
                    <td>المبلغ الإجمالي:</td>
                    <td>@Model.TotalAmount.ToString("N2")</td>
                </tr>
                <tr>
                    <td>المبلغ المدفوع:</td>
                    <td>@Model.PaidAmount.ToString("N2")</td>
                </tr>
                <tr class="total-row">
                    <td>المبلغ المتبقي:</td>
                    <td>@Model.RemainingAmount.ToString("N2")</td>
                </tr>
            </table>
        </div>

        <div class="invoice-footer">
            <p>شكراً لتعاملك معنا!</p>
            <p>@Model.Notes</p>
        </div>

        <div class="no-print" style="text-align: center; margin-top: 30px;">
            <button onclick="window.print()" class="btn btn-primary">طباعة الفاتورة</button>
            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary">العودة إلى التفاصيل</a>
        </div>
    </div>
</body>
</html>
