@model IEnumerable<HotelManagementSystem.Models.Room>

@{
    ViewData["Title"] = "الغرف";
}

<h1>الغرف</h1>

<p>
    <a asp-action="Create">إنشاء غرفة جديدة</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               رقمها
            </th>
            <th>
               نوع الغرفة
            </th>
            <th>
               سعر اليلة
            </th>
            <th>
                الوصف
            </th>
            <th>
               سعه الغرفة
            </th>
            <th>
               متوفرة
            </th>
            <th>
                الصورة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxGuests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="صورة الغرفة" style="width: 100px; height: auto; border-radius: 8px;" 
                         onerror="this.onerror=null;this.src='https://placehold.co/100x75/E0E0E0/ADADAD?text=لا توجد صورة';" />
                }
                else
                {
                    <span>لا توجد صورة</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                <a asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
